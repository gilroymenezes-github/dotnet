@page "/menu"
@inherits Business.WebApp.Shared.BaseComponent
@using Business.Shared
@using Business.Shared.Statics
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Path=""></RadzenPanelMenuItem>
            @if(UserRole == ApplicationConstant.SysAdminRoleName)
            {
                <RadzenPanelMenuItem Text="Admin" Path="admin"></RadzenPanelMenuItem>
            }
        </RadzenPanelMenu>
    </Authorized>
    <NotAuthorized>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Login" Path="login"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </NotAuthorized>
</AuthorizeView>


