@inherits Business.WebApp.Abstractions.BaseComponent

<RadzenHeading Text="Currencies"></RadzenHeading>

@if (Currencies is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenButton Text="Add Currency" Click="Add"></RadzenButton>
    <table class='table table-hover'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>        
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currency in Currencies.ToList())
            {
                <tr>
                    <td>@currency.Name</td>
                    <td>@currency.CurrencyCode</td>
                    <td><RadzenButton Text="Edit Or Delete" ButtonStyle="ButtonStyle.Warning" Click="(() => GetCurrency(currency.Id))"></RadzenButton></td>
                </tr>
            }
        </tbody>
    </table>

    @if (Mode == Business.Abstractions.CommandEnum.Add)
    {
        <RadzenTextBox @bind-Value=@CurrencyName Placeholder="Currency Name"></RadzenTextBox>
        <RadzenTextBox @bind-Value=@CurrencyCode Placeholder="Currency Code"></RadzenTextBox>
        <RadzenButton Text="Add Currency" ButtonStyle="ButtonStyle.Secondary" Click="AddCurrency"></RadzenButton>
    }
    else if (Mode == Business.Abstractions.CommandEnum.Edit)
    {

        <RadzenTextBox @bind-Value=@SelectedCurrency.Name Placeholder="Currency Name"></RadzenTextBox>
        <RadzenTextBox @bind-Value=@SelectedCurrency.CurrencyCode Placeholder="Currency Code"></RadzenTextBox>
        <RadzenButton Text="Edit Currency" ButtonStyle="ButtonStyle.Secondary" Click="EditCurrency"></RadzenButton>
        <RadzenButton Text="Delete Currency" ButtonStyle="ButtonStyle.Danger" Click="DeleteCurrency"></RadzenButton>
    }
}