@page "/menu"
@inherits Business.WebApp.Shared.BaseComponent
@using Business.Shared
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <RadzenPanelMenu>
            @if(UserRole == ApplicationConstant.SysAdminRoleName)
            {
                <RadzenPanelMenuItem Text="Dashboard" Path="dashboard"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Suppliers" Path="suppliers"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Customers" Path="customers"></RadzenPanelMenuItem>
            }
            <RadzenPanelMenuItem Text="Events" Path="events"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Items" Path="items"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Orders" Path="orders"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </Authorized>
    <NotAuthorized>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Shop" Path="shop"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Login" Path="login"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </NotAuthorized>
</AuthorizeView>


